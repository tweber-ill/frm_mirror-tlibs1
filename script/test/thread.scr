thread_func(a)
{
	i = 0;
	while(i less 25)
	{
		begin_critical();
			print("In " + a +  ": " + i);
		end_critical();

		i = i+1;
	}
}

main()
{
	nthreads = thread_hwcount();
	print("Hardware supports " + thread_hwcount() + " threads.\n");

	th = vec(nthreads);

	i = 0;
	while(i less nthreads)
	{
		str = "thread " + (i+1);
		th[i] = thread("thread_func", str);
		i = i+1;
	}

	print("In main thread");
	join(th);
	print("In main thread -- end");
}
