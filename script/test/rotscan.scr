#!./hermelin

rotmat(angle)
{
	c = cos(angle/180.*pi);
	s = sin(angle/180.*pi);

	return [[1., 0., 0.],
		[0.,  c, -s],
		[0.,  s,  c]];
}


main()
{
	a = 4.56;
	kh = 0.04;
	orient1 = [0., 1., 1.];
	orient2 = [0., -1., 1.];
	nuc = [0., 1., 1.];
	startangle = 0.;
	#stepangle = 60.;
	stepangle = 15.;

	rlu = 2.*pi / a;
	#print("kh2rlu = " + kh2rlu);
	
	startvec = prod(rotmat(startangle), orient1);
	#print("Start: " + str(start));

	numpts = int(360. / stepangle);

	for(ipt=0; ipt<numpts; ipt+=1)
	{
		rot = rotmat(startangle + real(ipt)*stepangle);
		curvec = prod(rot, startvec);
		curvec /= len(curvec);
		curvec *= kh;
		curvec /= rlu;

		#print("Vec: " + str(curvec));
		print(nuc + curvec);
	}
}
